<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminScreen">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:text="Hi Admin"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:id="@+id/texthiaddmin"
        />
    <TextView
        android:id="@+id/tvaddcatrgory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Add Category Click "
        app:layout_constraintTop_toBottomOf="@id/texthiaddmin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:textStyle="normal"
        android:textSize="16dp"
        android:textColor="@color/bblue"
        android:layout_marginStart="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Category"
        app:layout_constraintTop_toBottomOf="@id/tvaddcatrgory"
        app:layout_constraintStart_toStartOf="@id/tvaddcatrgory"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonaddcategory"
        />

</androidx.constraintlayout.widget.ConstraintLayout>