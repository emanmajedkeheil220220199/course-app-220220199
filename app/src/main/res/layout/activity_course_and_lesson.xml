<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseAndLesson">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Datiles Of Course"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/textdatiles"
         />
    <ImageView
        android:id="@+id/imageviewcourse"
        android:layout_width="0dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toBottomOf="@id/textdatiles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/nameofcourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Of Course"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageviewcourse"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        app:layout_constraintTop_toBottomOf="@id/imageviewcourse"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toEndOf="@id/nameofcourse"
         app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/nameoflecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Of Lecture"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/nameofcourse"
        app:layout_constraintTop_toBottomOf="@id/nameofcourse"
        />
    <TextView
        android:id="@+id/hourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hourse"
        app:layout_constraintTop_toBottomOf="@id/price"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toEndOf="@id/nameofcourse"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/nmoofstudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom Of Student"
        app:layout_constraintTop_toBottomOf="@id/nameoflecture"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/nameoflecture"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/deccourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dec"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/nmoofstudent"
        app:layout_constraintStart_toStartOf="@id/nameoflecture"
        />
    <TextView
        android:id="@+id/lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson"
        android:textSize="20dp"
        android:textColor="@color/pinky"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/deccourse"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/rvlesson"
        app:layout_constraintStart_toStartOf="@id/lesson"
        app:layout_constraintTop_toBottomOf="@id/lesson"
        />
    <ImageView
        android:id="@+id/iconadd"
        app:layout_constraintStart_toStartOf="@id/lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_box_24"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deccourse"
        />








</androidx.constraintlayout.widget.ConstraintLayout>