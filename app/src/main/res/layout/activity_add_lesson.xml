<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLesson">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Lesson "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_add"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/ed_namelesson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Name Lesson"
        app:layout_constraintTop_toBottomOf="@id/tv_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_margin="16dp"
        />
    <EditText
        android:id="@+id/ed_linklesson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Link Lesson"
        app:layout_constraintTop_toBottomOf="@id/ed_namelesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_margin="16dp"
        />
    <EditText
        android:id="@+id/ed_declesson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Dec Lesson"
        app:layout_constraintTop_toBottomOf="@id/ed_linklesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_margin="16dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btn_addlesson"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_declesson"

        />


</androidx.constraintlayout.widget.ConstraintLayout>