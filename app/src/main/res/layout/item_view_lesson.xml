<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">



        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_course_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Lesson"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"/>


        <TextView
            android:id="@+id/tv_course_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dec Of Lesson."
            app:layout_constraintTop_toBottomOf="@id/tv_course_name"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:textColor="#666" />
        <TextView
            android:id="@+id/tv_course_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link "
            app:layout_constraintTop_toTopOf="@id/tv_course_details"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:autoLink="web"
            android:clickable="true"
            android:focusable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>
